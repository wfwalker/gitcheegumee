<h1>Listing locations</h1>

<table>
<% @locations.each do |location| %>
  <tr>
    <td valign="top"><%= link_to location.title, edit_location_path(location) %></td>
    <td valign="top" style="padding-bottom: 20px;" ><%=h location.description %></td>
    <td valign="top" >
    	<div style="color: red">
    		<% if location.exits.count == 0 %><del>exits</del><% end %>
    		<% if location.entrances.count == 0 %><del>entrances</del><% end %>
    	</div>
    </td>
    <td valign="top">
    	<%= link_to 'delete', location, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<div><%= link_to 'New location', new_location_path %></div>

<div><%= link_to 'Download graphiz file', :controller => 'locations', :action => 'index', :format => 'dot' %></div>