<h1>Editing location</h1>

<% form_for(@location) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <b>Connected Rooms:</b>
    <% for exit in @location.exits do %>
      <div><%= link_to exit.title + " ==> " + exit.destination.title, edit_location_url(exit.destination_id) %></div>
    <% end %>
    <%= link_to 'Add Passage', new_passage_url() %>
    </p>  
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @location %> |
<%= link_to 'Back', locations_path %>