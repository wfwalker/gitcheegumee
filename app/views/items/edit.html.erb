<h1>Editing item</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :location_id %><br />
    <%= f.collection_select :location_id, Location.find(:all, :order => 'title'), :id, :title, {:include_blank => 'None'} %>
  </p>
  <p>
    <%= f.label :player_id %><br />
    <%= f.collection_select :player_id, Player.find(:all, :order => 'name'), :id, :name, {:include_blank => 'None'} %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @item %> |
<%= link_to 'Back', items_path %>